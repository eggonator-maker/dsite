{# pager--articles-search.html.twig #}

{% if items %}
  <nav class="articles-pager" role="navigation" aria-label="{{ 'Pagination'|t }}">
    <ul class="articles-pager__list">

      {# Previous #}
      {% if items.previous %}
        <li class="articles-pager__item articles-pager__item--prev">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev" class="articles-pager__link">
            <span aria-hidden="true">&lt;</span>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
          </a>
        </li>
      {% else %}
        <li class="articles-pager__item articles-pager__item--prev articles-pager__item--disabled">
          <span class="articles-pager__link">
            <span aria-hidden="true">&lt;</span>
          </span>
        </li>
      {% endif %}

      {% if ellipses.previous %}
        <li class="articles-pager__item articles-pager__item--ellipsis">
          <span class="articles-pager__link">…</span>
        </li>
      {% endif %}

      {# Page numbers #}
      {% for key, item in items.pages %}
        {% if current == key %}
          <li class="articles-pager__item articles-pager__item--active">
            <span class="articles-pager__link articles-pager__link--current">
              {{ key }}
              <span class="visually-hidden">{{ 'Current page'|t }}</span>
            </span>
          </li>
        {% else %}
          <li class="articles-pager__item">
            <a href="{{ item.href }}" title="{{ 'Go to page @key'|t({'@key': key}) }}" class="articles-pager__link">
              {{ key }}
              <span class="visually-hidden">{{ 'Page'|t }}</span>
            </a>
          </li>
        {% endif %}
      {% endfor %}

      {% if ellipses.next %}
        <li class="articles-pager__item articles-pager__item--ellipsis">
          <span class="articles-pager__link">…</span>
        </li>
      {% endif %}

      {# Next #}
      {% if items.next %}
        <li class="articles-pager__item articles-pager__item--next">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next" class="articles-pager__link">
            <span aria-hidden="true">&gt;</span>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
          </a>
        </li>
      {% else %}
        <li class="articles-pager__item articles-pager__item--next articles-pager__item--disabled">
          <span class="articles-pager__link">
            <span aria-hidden="true">&gt;</span>
          </span>
        </li>
      {% endif %}

    </ul>
  </nav>
{% endif %}