{#
/**
 * @file
 * Template for Mission Banner paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 * - content: All paragraph items.
 * - attributes: HTML attributes for the containing element.
 */
#}
{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
] %}

<section{{ attributes.addClass(classes) }}>
  {# Background decorative icons #}
  {% if paragraph.field_show_bg_icons.value %}
    <div class="mission-banner__bg-icon mission-banner__bg-icon--tr-1">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <circle cx="32" cy="32" r="8"/>
        <path d="M32 12v8m0 24v8m-12-20h8m24 0h8"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--tr-2">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <rect x="20" y="16" width="24" height="32" rx="4"/>
        <path d="M28 24h8m-8 8h8"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--tr-3">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <rect x="16" y="24" width="32" height="24" rx="4"/>
        <circle cx="32" cy="20" r="4"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--br-1">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <circle cx="32" cy="32" r="8"/>
        <path d="M32 12v8m0 24v8"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--br-2">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <rect x="20" y="20" width="24" height="24" rx="2"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--tl-1">
      <svg viewBox="0 0 81 81" fill="currentColor">
        <circle cx="40" cy="40" r="12"/>
        <path d="M40 16v12m0 24v12m-16-24h12m24 0h12"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--tl-2">
      <svg viewBox="0 0 45 45" fill="currentColor">
        <path d="M22 8c-6 0-10 4-10 10v8c0 4 2 6 4 6h12c2 0 4-2 4-6v-8c0-6-4-10-10-10z"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--bl-1">
      <svg viewBox="0 0 65 65" fill="currentColor">
        <rect x="16" y="20" width="32" height="28" rx="4"/>
        <rect x="24" y="12" width="16" height="8" rx="2"/>
      </svg>
    </div>
    <div class="mission-banner__bg-icon mission-banner__bg-icon--bl-2">
      <svg viewBox="0 0 64 64" fill="currentColor">
        <circle cx="32" cy="32" r="10"/>
        <circle cx="20" cy="44" r="4"/>
        <circle cx="44" cy="44" r="4"/>
      </svg>
    </div>
  {% endif %}

  <div class="mission-banner__content">
    {% if content.field_title %}
      <h1 class="mission-banner__title">{{ content.field_title }}</h1>
    {% endif %}
    
    {% if content.field_subtitle %}
      <p class="mission-banner__subtitle">{{ content.field_subtitle }}</p>
    {% endif %}

    <div class="mission-banner__card">
      <div class="mission-banner__card-content">
        {% if content.field_icon %}
          <div class="mission-banner__icon">
            {{ content.field_icon }}
          </div>
        {% endif %}

        {% if content.field_body %}
          <div class="mission-banner__text-wrapper">
            {{ content.field_body }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
