    <nav class="site-header__mobile-nav">
      <div class="site-header__mobile-nav-item site-header__mobile-nav-item--expandable">
        <div class="site-header__mobile-nav-row">
          <a href="/" class="site-header__mobile-nav-link">Spitalul Muntenia</a>
          <button type="button" class="site-header__mobile-nav-toggle" data-submenu-toggle>
            <span class="icon icon-chevron-down icon--xsm"></span>
          </button>
        </div>
        <div class="site-header__mobile-submenu">
          <a href="/despre-noi">Despre noi</a>
          <a href="/acreditari">Acreditari</a>
          <a href="/cariere">Cariere</a>
        </div>
      </div>
      
      <div class="site-header__mobile-nav-item">
        <a href="/specialities" class="site-header__mobile-nav-link">Specialitati</a>
      </div>
      
      <div class="site-header__mobile-nav-item">
        <a href="/doctors" class="site-header__mobile-nav-link">Medici</a>
      </div>
      
      <div class="site-header__mobile-nav-item">
        <a href="/centers" class="site-header__mobile-nav-link">Centre medicale</a>
      </div>
      
      <div class="site-header__mobile-nav-item site-header__mobile-nav-item--expandable">
        <div class="site-header__mobile-nav-row">
          <a href="/pachete-preturi" class="site-header__mobile-nav-link">Pachete si preturi</a>
          <button type="button" class="site-header__mobile-nav-toggle" data-submenu-toggle>
            <span class="icon icon-chevron-down icon--xsm"></span>
          </button>
        </div>
        <div class="site-header__mobile-submenu">
          <a href="/pachete">Pachete</a>
          <a href="/preturi">Preturi</a>
        </div>
      </div>
      
      <div class="site-header__mobile-nav-item">
        <a href="/contact" class="site-header__mobile-nav-link">Contact</a>
      </div>
    </nav>
  </div>
</div>