  <div class="offcanvas-header">
    <div class="site-header__offcanvas-logo-group">
      <a href="/" class="site-header__logo">
        <img src="/{{ directory }}/images/logo_nord_main.png" alt="{{ site_name }}">
      </a>
      <span class="site-header__divider"></span>
      <span class="site-header__brand-name">
        <img src="/{{ directory }}/images/muntenia.svg" alt="MUNTENIA">
      </span>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
