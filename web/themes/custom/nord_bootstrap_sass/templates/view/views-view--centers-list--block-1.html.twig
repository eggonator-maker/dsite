{# templates/views-view--centers-list--block-1.html.twig #}
{% set centers = [
  { tid: 1, name: 'Centrul de sân' },
  { tid: 2, name: 'Centrul de imagistică' },
  { tid: 3, name: 'Centrul de ortopedie' },
  { tid: 4, name: 'Centrul de oncologie' },
  { tid: 5, name: 'Centrul de bariatrie' },
  { tid: 6, name: 'Centrul de terapia durerii' }
] %}
{% set active_tid = 1 %}

{# The wrapper is now full-width #}
<section class="centers-section-wrapper">
  
  {# This new container only wraps the header and keeps it centered #}
  <div class="container">
    <header class="centers-section__header">
      <h2 class="centers-section__title">Centre medicale</h2>
      <p class="centers-section__paragraph">
        NORD Muntenia Hospital oferă un cadru medical bazat pe siguranță şi încredere, susținut de o echipă bine pregătită, empatică și orientată spre pacient, alături de tehnologie modernă și un sistem personalizat de gestionare a datelor. Pacienții beneficiază de servicii integrate de la investigații și analize, până la tratamente și intervenții, într-un singur loc, rapid și eficient.
      </p>
    </header>
  </div>
  

  <div class="centers-section-content">
        <div class="row g-5">
            {# ADD THE NEW CLASS 'centers-section__nav-col' HERE #}
            <div class="col-12 col-lg-4 d-flex justify-content-center centers-section__nav-col">
                <div class="nav flex-lg-column nav-pills gap-0 centers-section-nav" id="centers-tab" role="tablist" aria-orientation="vertical">
                {% for c in centers %}
                    {% set is_active = (active_tid is defined and active_tid == c.tid) or (active_tid is not defined and loop.first) %}
                    <button class="nav-link {{ is_active ? 'active' }}" id="tab-{{ c.tid }}" data-bs-toggle="pill" data-bs-target="#center-pane-{{ c.tid }}" type="button" role="tab" aria-controls="center-pane-{{ c.tid }}" aria-selected="{{ is_active ? 'true' : 'false' }}">
                    <span>{{ c.name }}</span>
                    <span class="icon icon-chevron-right icon--xsm ms-auto d-none d-lg-block"></span>
                    </button>
                {% endfor %}
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <div class="tab-content" id="centers-tabContent">
                {% for c in centers %}
                    {% set is_active = (active_tid is defined and active_tid == c.tid) or (active_tid is not defined and loop.first) %}
                    <div class="tab-pane fade {{ is_active ? 'show active' }}" id="center-pane-{{ c.tid }}" role="tabpanel" aria-labelledby="tab-{{ c.tid }}" tabindex="0">
                    {{ drupal_view('services_by_center', 'block_1', c.tid) }}
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>

  <div class="container">
    <div class="centers-section__footer">
      <a href="/centre" class="btn btn-outline-danger">
        {{ 'Vezi toate centrele'|t }}
      </a>
    </div>
  </div>
</section>