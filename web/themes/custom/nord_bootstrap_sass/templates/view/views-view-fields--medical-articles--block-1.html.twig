<article class="article-card">
  <div class="article-card__media">
    <a href="{{  fields.view_node.content|render|striptags|trim  }}">
      {{ fields.field_article_card_image.content }}
    </a>
  </div>

  <div class="article-card__body">
    <div class="article-card__text-content">
      <p class="article-card__date">{{ fields.created.content }}</p>
      <h3 class="article-card__title">
        <a href="{{ fields.view_node.content|render|striptags|trim  }}">{{ fields.title.content }}</a>
      </h3>
    </div>

    <div class="article-card__arrow">
      <a href="{{  fields.view_node.content|render|striptags|trim  }}" aria-label="Read more">
        <span class="icon icon-right-arrow icon--md text-danger"></span>
      </a>
    </div>
  </div>
</article>